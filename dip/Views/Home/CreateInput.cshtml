    }


    }
</tr>
                            </table>
                        </div>
                                    }
            </div>
        </div>
        <div id="specGroup">
            <div class="form-group" id="spec">
                @if (ViewBag.spec.Count != 0)
                {
                    @Html.Label( "Специальные характеристики", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <table>
                            <tr>
                                @{int cntSpec = 0;
                                    foreach (var spec in ViewBag.spec)
                                    {
                                        if (cntSpec++ % 3 == 0)
                                        {
                                            
                                        @:</tr><tr>

    }

