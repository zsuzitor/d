@model dip.Models.Domain.Action

@{
    ViewBag.Title = "CreateInput";
}






@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Шаг 1. Задайте входное воздействие</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.AllActionId, "Название воздействия", htmlAttributes: new { id = "actionLabel", @class = "control-label col-md-2", value = @ViewBag.currentActionId })
            <div class="col-md-10">
                @Html.DropDownList("actionId", null, htmlAttributes: new { id = "action", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AllActionId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ActionType_Id, "Тип входа", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("actionType", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ActionType_Id, "", new { @class = "text-danger" })
            </div>
        </div>
        <div id="fizVelGroup">
            <div class="form-group" id="fizVel">
                @if (ViewBag.currentAction != "VOZ11")
                {
                    @Html.LabelFor(model => model.FizVelId, "Название физической величины", htmlAttributes: new { @class = "control-label col-md-2" })
                }
                else
                {
                    @Html.LabelFor(model => model.FizVelId, "Раздел физики", htmlAttributes: new { @class = "control-label col-md-2" })
                }
                <div class="col-md-10">
                    @Html.DropDownList("fizVelId", null, htmlAttributes: new { id = "fizVelId", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FizVelId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group" id="parametricFizVel">
            @if (ViewBag.parametricFizVelId.Count != 0)
            {
                @Html.Label("Название физической величины", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("parametricFizVelId", ViewBag.parametricFizVelId as SelectList, htmlAttributes: new { @class = "form-control" })
                </div>
            }
        </div>
        <div id="prosGroup">
            <div class="form-group" id="pros">
                @if (ViewBag.pros.Count != 0)
                {
                    @Html.Label( "Пространственные характеристики", htmlAttributes: new { @class = "control-label col-md-2" })
