@model IEnumerable<dip.Models.Domain.ListPhysics>



@if (Model != null)
{
    
        <input class="form-control" onchange="clearListFeLinkExist()" placeholder="id списка для удаления" type="number" id="AssignListForDel" />
    <div class="div_inline_block">
        <button class="btn btn-default" onclick="ShowLinkListFeExist()">Показать Ссылку на список</button>
    </div>
    <div class="button_circle_img_30 button_circle_sub_ div_inline_block" onclick="removeListFromUser()" title="Забрать у пользователя все ФЭ включенные в этот список"></div>

        <div id="divLinkCurrListFeExist_id"></div>

        <div id="listListsFeExist">
            @foreach (var i in Model)
            {
                <div class="bottomGrey" id=@("divOneListFeExist_"+i.Id)>
                    <div class="div_inline_block listAction_inpbut_inp">
                        <a title="@i.Name" href="@Url.Action("ListAct","ListPhysics",new {currentListId=i.Id })">@i.Name</a>
                    </div>
                    <div class="button_circle_img_30 button_circle_sub_ div_inline_block" onclick="removeListFromUser(@i.Id)" title="забрать у пользователя все ФЭ включенные в этот список"></div>
                </div>
            }
        </div>
}
else
{
    <h1>Пользователь не найден</h1>
}




