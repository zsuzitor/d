



@model dip.Models.Domain.Action


<div class="form-group" id="pros">
    @if (ViewBag.pros.Count != 0)
    {
        @Html.LabelFor(model => model.Pros, "Пространственные характеристики", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <table>
                <tr>
                    @{
                        int cnt = 0;
                        foreach (var pros in ViewBag.pros)
                        {
                            if (cnt++ % 3 == 0)
                            {
                                @: </tr> <tr>
                            }
                            @:
                            <td>
                                <input type="checkbox" name="listSelectedPros" value="@pros.Id" /> @pros.Name
                                <div id="@pros.Id" name="0"></div>
                                </td>
                        }
                        @: </tr>
                    }
                </table>
            </div>
                        }
</div>
