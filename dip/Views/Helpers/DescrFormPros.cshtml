


@model dip.Models.ViewModel.HelpersV.DescrFormListDataV<dip.Models.Domain.Pro>


<div class="form-group descrCheckBoxChild" @*id=@("pros" + type)*@>
    @if (Model.List != null && Model.List.Count != 0)
    {
        <div class="col-md-10">

            @{
                string[] needSelectedList = Model.Param?.ListSelectedPros?.Split(new string[] { " " }, StringSplitOptions.RemoveEmptyEntries);
                foreach (var pro in Model.List)
                {
                    <div>
                        @{
                            bool? needSelected = needSelectedList?.Contains(pro.Id);
                        }
                        <label>
                            @if (needSelected == true)
                            {

                                <input  class="checkBoxClass" type="checkbox" checked name=@("listSelectedPros" + Model.Type) value="@pro.Id" />
                            }
                            else
                            {
                               <input class="checkBoxClass" type="checkbox" name=@("listSelectedPros" + Model.Type) value="@pro.Id" />

                            }
                            @pro.Name
                        </label>

                        <div id="@(pro.Id + Model.Type)" name="0">
                            @if (pro.Childs.Count > 0)
                            {
                                @Html.Action("DescrFormPros", "Helpers", new { type = Model.Type, pros = pro.Childs, param = Model.Param })
                                
                            }
                        </div>
                    </div>
                            }

            }

        </div>
                            }
</div>







